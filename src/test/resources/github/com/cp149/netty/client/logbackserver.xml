<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<appender name="Countout" class="github.com.cp149.CountAppender" />
	<appender name="RollingFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/logback-server-%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		
		
		<encoder>
			<pattern>%d %-5p [%t] %c [%F:%L] - %msg%n</pattern>
			
		</encoder>
	</appender>
	<appender name="ASYNC" class="github.com.cp149.disruptor.DisruptorAppender">
		<threadSize>1</threadSize>
		<appender-ref ref="Countout" />
		<appender-ref ref="RollingFile" />
	</appender>

	<root level="DEBUG">
		<appender-ref ref="ASYNC" />		
	</root>
</configuration>