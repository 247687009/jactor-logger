<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %p [%t] %c [%F:%L] - %msg%n
			</pattern>
			
		</encoder>
	</appender>
	<appender name="Countout" class="github.com.cp149.CountAppender" />
	<appender name="RollingFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">	
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/logback-disruptor-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
				
		<encoder>
			<pattern>%d %-5p [%t] %c [%F:%L] - %msg%n</pattern>			
		</encoder>
	</appender>	
	
	
	
	
	<appender name="ASYNCFile" class="github.com.cp149.disruptor.DisruptorAppender">		
		<appender-ref ref="RollingFile" />		
		<appender-ref ref="Countout" />
	</appender>
	<logger name="github.com.cp149.AppenderBaseTest"  level="DEBUG" additivity="false" >				
		<appender-ref ref="STDOUT" />
	</logger>
	<root level="DEBUG">		
		<appender-ref ref="ASYNCFile" />
	</root>
</configuration>